{
  "components": {
    "schemas": {
      "Project": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique identifier for the project.",
            "example": 1
          },
          "author_id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique identifier of the user who created the project.",
            "example": 100
          },
          "title": {
            "type": "string",
            "description": "Title of the project.",
            "example": "Project Management Tool"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the project.",
            "example": "A web-based project management application."
          },
          "repository_url": {
            "type": "string",
            "nullable": true,
            "description": "URL of the project's repository.",
            "example": "https://github.com/example/project"
          },
          "url": {
            "type": "string",
            "nullable": true,
            "description": "URL of the project.",
            "example": "https://project.example.com"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the project was created."
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the project was last updated."
          }
        },
        "required": ["id", "author_id", "title", "description"]
      }
    }
  }
}
